#!/bin/bash
SELF=$(basename "$0")

LOG_LEVEL="INFO"
LOG_FILE="./var/log/$SELF.log"

# ----- main -----

# queues from script name
QUEUES=""
case "$SELF" in
    *beat*)
        TYPE="beat"
        ;;&
    *worker*)
        TYPE="worker"
        CONCURRENCY=8
        #P="-P gevent"
        ;;&
    *sender*)
        QUEUES+=",emails,sms"
        LOG_LEVEL="DEBUG"
        HOSTNAME_SUFFIX="sender-${RANDOM::2}."
        #HOSTNAME_SUFFIX="sender."
        CONCURRENCY=8
        P="-P gevent"
        #P="-P threads"
        #P="-P solo"
        ;;&
    *main*)
        QUEUES+=",celery,campaigns"
        HOSTNAME_SUFFIX="main."
        P="-P gevent"
        ;;&
esac

# queue prepend
[[ -z "$QUEUES" ]] \
  || QUEUES="-Q ${QUEUES:1}"

# log level prepend
[[ -z "$LOG_LEVEL" ]] \
  || LOG_LEVEL="-l $LOG_LEVEL"

# concurrency prepend
[[ -z "$CONCURRENCY" ]] \
  || CONCURRENCY="-c $CONCURRENCY"

# hostname
[[ -z "$HOSTNAME_SUFFIX" ]] \
  || HOSTNAME_SUFFIX="-n $HOSTNAME-$HOSTNAME_SUFFIX"

# log file prepend
[[ -z "$LOG_FILE" ]] \
  || LOG_FILE="-f $LOG_FILE"

cmd="./bin/env ./manage.py celery $TYPE $HOSTNAME_SUFFIX $QUEUES $LOG_LEVEL $LOG_FILE $P $CONCURRENCY"
echo "[$cmd $*]"
exec $cmd "$@"
